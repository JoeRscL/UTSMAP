<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema utama aplikasi -->
    <style name="Theme.Mindnestapp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Tema khusus untuk splash / landing screen -->
    <style name="Theme.Mindnestapp.SplashScreen" parent="Theme.SplashScreen">
        <!-- Warna background saat splash -->
        <item name="windowSplashScreenBackground">#0B3571</item>

        <!-- Logo yang ditampilkan -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_login</item>

        <!-- Warna status bar (biar nyatu) -->
        <item name="android:statusBarColor">#0B3571</item>

        <!-- Setelah splash, lanjut ke tema utama -->
        <item name="postSplashScreenTheme">@style/Theme.Mindnestapp</item>
    </style>

</resources>
